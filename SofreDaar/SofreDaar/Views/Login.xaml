<UserControl x:Class="SofreDaar.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SofreDaar.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel FlowDirection="RightToLeft" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#F5F7FA" CornerRadius="30">
                <StackPanel Margin="30">
                    <TextBlock FontSize="30" HorizontalAlignment="Center">سفره دار</TextBlock>
                    <Label Content="نام کاربری"></Label>
                    <TextBox MinWidth="300" x:Name="usernameTextBox" Text="{Binding Username}"></TextBox>
                    <Label Content="رمز ورود"></Label>
                    <TextBox x:Name="passwordTextBox" Text="{Binding Password}"></TextBox>
                    <Button x:Name="loginButton" Margin="0,30,0,0" Content="ورود به سفره دار" Command="{Binding LoginCommand}"></Button>
                    <Button x:Name="signupButton" Margin="0,10,0,0" Content="ثبت نام در سفره دار" Command="{Binding LoginCommand}"></Button>
                </StackPanel>

            </Border>
        </StackPanel>
    </Grid>
</UserControl>
