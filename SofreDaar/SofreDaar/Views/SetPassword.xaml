<UserControl x:Class="SofreDaar.Views.SetPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SofreDaar.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel FlowDirection="RightToLeft" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#F5F7FA" CornerRadius="30">
                <StackPanel Margin="30">
                    <TextBlock FontSize="30" HorizontalAlignment="Center">سفره دار</TextBlock>
                    <Label Content="رمز ورود"></Label>
                    <TextBox MinWidth="300" x:Name="passwordTextBox" Text="{Binding Password}"></TextBox>
                    <Label Content="تکرار رمز ورود"></Label>
                    <TextBox x:Name="repeatPasswordTextBox" Text="{Binding RepeatPassword}"></TextBox>
                    <Button Margin="0,30,0,0" Content="تکمیل ثبت نام" Command="{Binding SetPasswordCommand}"></Button>
                   
                </StackPanel>

            </Border>
        </StackPanel>
    </Grid>
</UserControl>
