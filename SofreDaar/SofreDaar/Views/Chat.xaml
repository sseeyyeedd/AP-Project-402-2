<UserControl x:Class="SofreDaar.Views.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SofreDaar.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border HorizontalAlignment="Center" Margin="5" FlowDirection="RightToLeft" Padding="10" Background="#F5F7FA" CornerRadius="30">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox ItemsSource="{Binding Messages}" Grid.Row="0"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Width="600"/>
                    <Button Content="ارسال" Command="{Binding SendMessageCommand}" Width="100"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
