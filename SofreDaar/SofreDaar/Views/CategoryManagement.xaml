<UserControl x:Class="SofreDaar.Views.CategoryManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SofreDaar.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border HorizontalAlignment="Center" Margin="5" FlowDirection="RightToLeft" Padding="10" Grid.Row="1" Background="#F5F7FA" CornerRadius="30">
            <StackPanel>
            <DataGrid CanUserDeleteRows="True" CanUserAddRows="True" ItemsSource="{Binding Categories}" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="دسته بندی" Binding="{Binding Title}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
                <Button Margin="0,5,0,0" Content="ذخیره" Command="{Binding SaveDataCommand}"></Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
