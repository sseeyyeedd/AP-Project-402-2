<Window x:Class="SofreDaar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SofreDaar"
        xmlns:vm="clr-namespace:SofreDaar.ViewModels"
        xmlns:views="clr-namespace:SofreDaar.Views"
        mc:Ignorable="d"
        Title="SofreDaar" MinHeight="450" MinWidth="800" Background="Transparent">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:Login />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SignUpViewModel}">
            <views:SignUp />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush Opacity="0.9" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFCCFFFF" Offset="0.0"/>
                <GradientStop Color="#CCCCFFFF" Offset="0.5"/>
                <GradientStop Color="#CCFFFFFF" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
    </Grid>
</Window>
